<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExportFragment">

    <ImageView
        android:src="@drawable/ic_smartphone_black_24dp"
        android:layout_width="75dp"
        android:layout_height="75dp"/>

    <TextView
        android:fontFamily="@font/sourcesans_reguler"
        android:textColor="@color/textBlackPlan"
        android:textSize="14sp"
        android:text="Save to your device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:fontFamily="@font/sourcesans_reguler"
        android:textSize="48sp"
        android:textColor="@color/textBlackPlan"
        android:text="Or"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginEnd="10dp"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:src="@drawable/drive"
                android:layout_width="60dp"
                android:layout_height="60dp"/>

            <TextView
                android:fontFamily="@font/sourcesans_reguler"
                android:textColor="@color/textBlackPlan"
                android:textSize="14sp"
                android:text="Export to Google Drive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:src="@drawable/dropbox"
                android:layout_width="60dp"
                android:layout_height="60dp"/>

            <TextView
                android:fontFamily="@font/sourcesans_reguler"
                android:textColor="@color/textBlackPlan"
                android:textSize="14sp"
                android:text="Export to Dropbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>