<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:id="@+id/ll_item_event_home"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_item_event_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sourcesans_reguler"
        android:textColor="@color/textDisabled"
        android:text="Coaching Clinic 1"
        android:textSize="12sp"
        />

    <View
        android:layout_width="match_parent"
        android:id="@+id/view_item_event_home"
        android:visibility="invisible"
        android:layout_height="3dp"
        android:background="@color/lightBlue"/>

</LinearLayout>